

@using LibraryManagementSystem.Models.ViewModels
@model AddBookViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center">
                <h1>Add Book</h1>
            </div>
            <form method="post" asp-controller="BookManagement" asp-action="CreateBook" class="form-horizontal">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required />
                </div>
                <div class="form-group">
                    <label for="summary">Summary</label>
                    <textarea class="form-control" id="summary" name="summary" rows="4" style="resize: none;" required></textarea>
                </div>
                <div class="form-group">
                    <label for="contents">Contents</label>
                    <textarea class="form-control" id="contents" name="contents" rows="6" style="resize: none;" required></textarea>
                </div>
                <div class="form-group">
                    <label for="genres">Genre(s) - shift to select more than one option</label>
                    <select id="genres" name="genres" class="form-control dropdown" multiple required>
                        @foreach (var genre in Model.Genres)
                        {
                            <option value="@genre.Id">@genre.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="authors">Author(s) - shift to select more than one option</label>
                    <select id="authors" name="authors" class="form-control dropdown" multiple required>
                        @foreach (var author in Model.Authors)
                        {
                            <option value="@author.Id">@author.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline-dark">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
