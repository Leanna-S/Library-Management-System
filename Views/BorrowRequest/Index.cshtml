@model List<BookRequest>

<div class="text-center">
    <h1>Book Request Manager</h1>
</div>

@if(Model.Count <= 0)
{
    <p>No requests found.</p>
    return;
}


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Status</th>
            <th>Book Title</th>
            <th>Book Status</th>
            <th>User</th>
            <th>Time of Request</th>
            <th>Reason</th>
            <th>Actions</th>
        </tr>

    </thead>
    <tbody>
        @foreach (BookRequest br in Model)
        {
            <tr>
                <td>@br.Status</td>
                <td>@br.Book.Title</td>
                <td>
                    @if (br.Book.UserId == null)
                    {
                        <text>Available</text>
                    }
                    else if (br.Book.UserId == br.RequesterId)
                    {
                        <text>User has book</text>
                    } 
                    else
                    {
                        <text>Book checked out to another user</text>
                    }
                </td>
                <td>@br.Requester.UserName</td>
                <td>@br.CreatedDate</td>
                <td>@br.Reason</td>
                <td>
                    @if (br.Status == Constants.BookRequestStatus.Pending)
                    {
     
                        <a asp-controller="BorrowRequest" asp-action="UpdateRequestStatus" asp-route-id="@br.Id">Update Request Status</a>
                    }
                    else
                    {
                        <text>No actions available</text>
                    }
                </td>
            </tr>
        }

    </tbody>
</table>