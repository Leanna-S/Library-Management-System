@using LibraryManagementSystem.Models.ViewModels
@model RoleManagementIndexViewModel


<div class="text-center">
    <h1>Remove Role</h1>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="form-horizontal" 
            runat="server"
            onsubmit=@(Model.IsCurrentUser ?? false ? "return confirm('Are you sure you want to remove a role from yourself? Signout/in to apply changes.')" : "")>
            
                <div class="form-group mb-3">
                    <label>Role</label>
                    <select class="form-control" name="role" required id="role" >
                        <option value="">--Please choose an option--</option>
                        @foreach (var role in Model.Roles)
                        {
                            if ((role != Constants.SuperAdminRole && role != Constants.AdminRole) || User.IsInRole(Constants.SuperAdminRole))
                            {
                                <option value="@role">@role</option>
                            }
   
                        }

                    </select>
                    <input type="hidden" name="id" id="userId" value="@Model.User.Id" />
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-outline-dark" asp-controller="RoleManagement" asp-action="RemoveRole">Click To Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

