@using LibraryManagementSystem.Models.ViewModels
@model RoleManagementIndexViewModel

<div class="text-center">
    <h1>Add Roles</h1>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="form-horizontal">
                
                <div class="form-group mb-3">
                    <label>Role</label>
                    <select class="form-control" name="role" required>
                        <option value="">--Please choose an option--</option>
                        @foreach (var role in Model.Roles)
                        {
                            if ((role != Constants.SuperAdminRole && role != Constants.AdminRole) || User.IsInRole(Constants.SuperAdminRole))
                            {
                                <option value="@role">@role</option>
                            }

                        }

                    </select>
                    <input type="hidden" name="id" value="@Model.User.Id" />
                    </select>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-outline-dark" asp-controller="RoleManagement" asp-action="AddRole">Click To Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>